{
 
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true


  }
}
